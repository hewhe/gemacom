<%# キーワード検索機能 %>
<div>
	<%= form_with(scope: :search, url: top_groups_path, method: :GET, local: true) do |f| %>
		<%= f.text_field(:word) %>
		<%= f.submit("検索") %>
	<% end %>
</div>
