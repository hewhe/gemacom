<%# カテゴリー検索 %>
<div>
	<p>カテゴリー一覧</p>
	<% @group_categories.each do |category| %>
		<%= link_to("#{category.name}", top_groups_path(group_category_id: category.id)) %>
	<% end %>
</div>
