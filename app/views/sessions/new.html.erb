<div class="container">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_with(scope: :session, url: login_path, method: :POST, local: true) do |f| %>
                <%# フォームタイトル %>
                <div class="modal-header">
                    <h5 class="modal-title">ログイン</h5>
                </div>

                <%# 入力欄 %>
                <div class="modal-body">
                    <div>
                        <%= f.label(:name, "名前", class: "form-control-label") %>
                        <%= f.text_field(:name, value: @name, class: "form-control") %>
                    </div>

                    <div>
                        <%= f.label(:password, "パスワード", class: "form-control-label") %>
                        <%= f.password_field(:password, class: "form-control") %>
                    </div>
                </div>

                <div class="modal-footer">
                    <%= f.submit("ログイン", class: "btn btn-primary") %>
                </div>
            <% end %>
        </div>
    </div>
</div>