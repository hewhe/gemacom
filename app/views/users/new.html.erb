<div class="container">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <%= form_with( model: @user, url: users_path, method: :POST, local: true) do |f| %>

                <%# エラーメッセージの表示 %>
                <% if @user.errors.any? %>
                    <div id="error_explanation">
                        <h2><%= pluralize(@user.errors.count, "error") %>件のエラーがあります。</h2>
                        <ul>
                            <% @user.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>

                <%# フォームタイトル %>
                <div class="modal-header">
                    <h5 class="modal-title">新規登録</h5>
                </div>

                <%# 入力欄 %>
                <div class="modal-body">
                    <div class="form-group field">
                        <%= f.label(:name, "名前", class: "form-control-label") %>
                        <%= f.text_field(:name, value: @user.name, class: "form-control") %>
                    </div>

                    <div class="form-group">
                        <%= f.label(:password, "パスワード", class: "form-control-label") %>
                        <%= f.password_field(:password, class: "form-control") %>
                    </div>

                    <div class="form-group">
                        <%= f.label(:password_confirmation, "確認用パスワード", class: "form-control-label") %>
                        <%= f.password_field(:password_confirmation, class: "form-control") %>
                    </div>

                    <!--
                    <div>
                        <%# f.label(:image, "画像") %>
                        <%# f.attachment_field(:image) %>
                    </div>
                    -->
                </div>

                <div class="modal-footer actions">
                    <%= f.submit("新規登録", class: "btn btn-primary") %>
                </div>
            <% end %>
        </div>
    </div>
</div>